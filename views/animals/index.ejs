<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs", {title: "Animal List"}) %>
<body>
    <%- include("../partials/header.ejs", {title: "Animal List"}) %>
    <main>
        <a href="/animals/new">
            <button>Create New Animal</button>
        <div>
            <% for (animal of animals) { %> 
            <article>
                <a href="/animals/<% animal._id %> "
                    <h2>
                        <a href="/animals/<%= animal._id%>">
                            <h2>
                                <%= animal.species %> -  <%= animal.extinct ? "Extinct" : "Not Extinct"%>
                            </h2>
                        </a>
                    </h2>
            </article>
            <% } %> 
        </div>
    </main> 
</body>
</html>